<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <!-- 自定义loading dialog -->
    <style name="zhezhao_dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#33000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="WelcomeTheme" parent="AppTheme">
        <!-- 欢迎页背景引用刚才写好的 -->
        <item name="android:windowBackground">@drawable/welcome</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> --> <!-- 透明背景不要了 -->
    </style>

    <style name="IndexUserListTheme" parent="AppTheme">
        <!-- 欢迎页背景引用刚才写好的 -->
        <item name="android:statusBarColor">#80221B33</item>
        <!-- <item name="android:windowIsTranslucent">true</item> --> <!-- 透明背景不要了 -->
    </style>

    <style name="yogaCourseRatingBar" parent="@android:style/Widget.RatingBar">
        <!--<item name="android:progressDrawable">@drawable/bg_rating</item>-->
        <item name="android:progressDrawable">@drawable/bg_rating</item>
        <item name="android:minHeight">@dimen/y16</item>
        <item name="android:minWidth">@dimen/y16</item>
        <item name="android:maxWidth">@dimen/y16</item>
        <item name="android:maxHeight">@dimen/y16</item>
    </style>

    <style name="comment_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">@dimen/y12</item>
        <item name="android:maxHeight">@dimen/y12</item>
    </style>

    <style name="giftDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppRootTheme" parent="Base.Theme.AppCompat.Light" />

    <style name="AppRootTheme.Compat" parent="Base.Theme.AppCompat.Light" />

