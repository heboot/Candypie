<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传有吸引力的视频，
        会被推荐哦～"
            android:textColor="#FCEA10"
            android:textSize="@dimen/x30"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/v1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/x270"
            android:layout_height="@dimen/y202"
            android:background="@drawable/dongtai_servicer_tip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/button"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/y40"
            android:layout_marginTop="@dimen/y195"
            android:text="上传视频"
            android:textColor="@color/color_343445"
            android:textSize="@dimen/x20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v1"
            app:qmui_backgroundColor="#FFBB28"
            app:qmui_borderWidth="0dp" />
    </android.support.constraint.ConstraintLayout>
</layout>