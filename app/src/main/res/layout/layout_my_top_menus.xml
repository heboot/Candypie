<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llyt_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:background="@drawable/icon_my_account" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="我的账户"
                android:textColor="@color/color_343445"
                android:textSize="@dimen/x16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:background="@drawable/icon_my_ver" />

            <TextView
                android:id="@+id/tv_ver_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="已认证"
                android:textColor="@color/color_343445"
                android:textSize="@dimen/x16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:background="@drawable/icon_my_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="推荐有奖"
                android:textColor="@color/color_343445"
                android:textSize="@dimen/x16" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/y40"
                    android:background="@drawable/icon_my_order"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y4"
                    android:text="我的订单"
                    android:textColor="@color/color_343445"
                    android:textSize="@dimen/x16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv" />

                <TextView
                    android:id="@+id/tv_order_num_tip"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/y15"
                    android:background="@drawable/oval_red"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x10"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    app:layout_constraintRight_toRightOf="@+id/iv"
                    app:layout_constraintTop_toTopOf="@+id/iv" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>
</layout>