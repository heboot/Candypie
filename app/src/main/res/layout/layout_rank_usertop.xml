<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200">


        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y127"
            android:layout_marginBottom="@dimen/y45"
            android:background="@drawable/bg_rank_top"
            app:layout_constraintBottom_toBottomOf="parent"></View>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clyt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/avatar1"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y90"
                android:src="@drawable/icon_avatar_normal"
                app:layout_constraintBottom_toBottomOf="@+id/v1"
                app:qmui_border_width="0dp" />

            <View
                android:id="@+id/v1"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/y115"
                android:background="@drawable/icon_rank_king1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"></View>

            <View
                android:id="@+id/numv1"
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/y26"
                android:layout_marginTop="@dimen/y100"
                android:background="@drawable/icon_rank_num1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/v1"></View>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="@dimen/x80"
                android:text="何博"
                android:textColor="#FBAE12"
                android:textSize="@dimen/x18"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numv1" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/clyt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x40"
            app:layout_constraintBottom_toBottomOf="@+id/clyt1"
            app:layout_constraintRight_toLeftOf="@+id/clyt1">


            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/avatar2"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:src="@drawable/icon_avatar_normal"
                app:layout_constraintBottom_toBottomOf="@+id/v2"
                app:qmui_border_width="0dp" />

            <View
                android:id="@+id/v2"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y98"
                android:background="@drawable/icon_rank_num2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"></View>

            <View
                android:id="@+id/numv2"
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/y26"
                android:layout_marginTop="@dimen/y84"
                android:background="@drawable/icon_rank_king2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/v2"></View>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="@dimen/x80"
                android:text="何博"
                android:textColor="#C592D6"
                android:textSize="@dimen/x18"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numv2" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clyt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            app:layout_constraintBottom_toBottomOf="@+id/clyt1"
            app:layout_constraintLeft_toRightOf="@+id/clyt1">


            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/avatar3"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:src="@drawable/icon_avatar_normal"
                app:layout_constraintBottom_toBottomOf="@+id/v3"
                app:qmui_border_width="0dp" />

            <View
                android:id="@+id/v3"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y98"
                android:background="@drawable/icon_rank_king3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"></View>

            <View
                android:id="@+id/numv3"
                android:layout_width="@dimen/x26"
                android:layout_height="@dimen/y26"
                android:layout_marginTop="@dimen/y84"
                android:background="@drawable/icon_rank_num3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/v3"></View>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="@dimen/x80"
                android:text="何博"
                android:textColor="#D69454"
                android:textSize="@dimen/x18"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numv3" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>