<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_service_ver"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y24"
            android:layout_marginTop="@dimen/y15"
            android:src="@drawable/icon_ver_id_homepage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_title"
            app:qmui_border_width="0dp"
            app:qmui_is_circle="true" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:text="111"
            android:textColor="@color/color_57586C"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_service_ver"
            app:layout_constraintLeft_toRightOf="@+id/iv_service_ver"
            app:layout_constraintTop_toTopOf="@+id/iv_service_ver" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y24"
            android:layout_marginRight="@dimen/x16"
            android:background="@drawable/bg_rect_border_color_cdb079"
            android:paddingLeft="@dimen/x12"
            app:layout_constraintBottom_toBottomOf="@+id/iv_service_ver"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_service_ver">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/y16"
                android:layout_marginRight="@dimen/x3"
                android:background="@drawable/icon_ver_ok"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_status"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y24"
                android:layout_marginRight="@dimen/x16"
                android:gravity="center"
                android:text="1111"
                android:textColor="@color/color_CDB079"
                app:layout_constraintBottom_toBottomOf="@+id/v"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/v" />


        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</layout>