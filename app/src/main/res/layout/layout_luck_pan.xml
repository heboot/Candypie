<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clyt_container0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_luckpan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y18"
                android:text="互动转盘"
                android:textColor="@color/white"
                android:textSize="@dimen/x18"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/x13"
                android:layout_height="@dimen/y13"
                android:layout_marginLeft="@dimen/x17"
                android:background="@drawable/icon_index_close_menu"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title" />

            <View
                android:id="@+id/v_close"
                android:layout_width="@dimen/x53"
                android:layout_height="@dimen/y53"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title" />

            <View
                android:id="@+id/vline"
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_marginTop="@dimen/y17"
                android:alpha="10"
                android:background="#1AEDEDF3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"></View>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/clyt_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y17"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vline">

                <View
                    android:id="@+id/v_test"
                    android:layout_width="@dimen/x264"
                    android:layout_height="@dimen/y264"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.gdlife.candypie.view.luckpan.RotatePan

                    android:id="@+id/rotatePan"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/y200"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                <ImageView
                    android:id="@+id/iv_panbg"
                    android:layout_width="@dimen/x322"
                    android:layout_height="@dimen/y322"
                    android:background="@drawable/luckpan_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <include
                    android:id="@+id/include_content1"
                    layout="@layout/view_luckpan_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y5"
                    app:layout_constraintLeft_toLeftOf="@+id/v_test"
                    app:layout_constraintRight_toRightOf="@+id/v_test"
                    app:layout_constraintTop_toTopOf="@+id/v_test"></include>

                <include
                    android:id="@+id/include_content2"
                    layout="@layout/view_luckpan_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x31"
                    android:layout_marginTop="@dimen/y45"
                    app:layout_constraintRight_toRightOf="@+id/v_test"
                    app:layout_constraintTop_toTopOf="@+id/v_test"></include>

                <include
                    android:id="@+id/include_content6"
                    layout="@layout/view_luckpan_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x31"
                    android:layout_marginTop="@dimen/y45"
                    app:layout_constraintLeft_toLeftOf="@+id/v_test"
                    app:layout_constraintTop_toTopOf="@+id/v_test"></include>


                <include
                    android:id="@+id/include_content3"
                    layout="@layout/view_luckpan_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y45"
                    android:layout_marginRight="@dimen/x31"
                    app:layout_constraintBottom_toBottomOf="@+id/v_test"
                    app:layout_constraintRight_toRightOf="@+id/v_test"></include>

                <include
                    android:id="@+id/include_content5"
                    layout="@layout/view_luckpan_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y45"
                    android:layout_marginLeft="@dimen/x31"
                    app:layout_constraintBottom_toBottomOf="@+id/v_test"
                    app:layout_constraintLeft_toLeftOf="@+id/v_test"></include>


                <include
                    android:id="@+id/include_content4"
                    layout="@layout/view_luckpan_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y5"
                    app:layout_constraintBottom_toBottomOf="@+id/v_test"
                    app:layout_constraintLeft_toLeftOf="@+id/v_test"
                    app:layout_constraintRight_toRightOf="@+id/v_test"></include>


            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_node"
                android:layout_width="@dimen/x116"
                android:layout_height="@dimen/y116"
                android:background="@drawable/luckpan_node"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_node"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="发起"
                android:textColor="@color/white"
                android:textSize="@dimen/x22"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_node"
                app:layout_constraintLeft_toLeftOf="@+id/iv_node"
                app:layout_constraintRight_toRightOf="@+id/iv_node"
                app:layout_constraintTop_toTopOf="@+id/iv_node"

                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y17"
                android:paddingBottom="@dimen/y10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clyt_container">

                <TextView
                    android:id="@+id/tv_coin_balance_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="钻石余额:"
                    android:textColor="@color/color_EDEDF3"
                    android:textSize="@dimen/x16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/qrb_recharge" />

                <ImageView
                    android:id="@+id/iv_coin"
                    android:layout_width="@dimen/x17"
                    android:layout_height="@dimen/y15"
                    android:layout_marginLeft="@dimen/x10"
                    android:background="@drawable/icon_coin"
                    app:layout_constraintBottom_toBottomOf="@+id/qrb_recharge"
                    app:layout_constraintLeft_toRightOf="@+id/tv_coin_balance_tip"
                    app:layout_constraintTop_toTopOf="@+id/qrb_recharge" />

                <TextView
                    android:id="@+id/tv_coin_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x3"
                    android:text="520"
                    android:textColor="@color/color_EDEDF3"
                    android:textSize="@dimen/x16"
                    app:layout_constraintBottom_toBottomOf="@+id/qrb_recharge"
                    app:layout_constraintLeft_toRightOf="@+id/iv_coin"
                    app:layout_constraintTop_toTopOf="@+id/qrb_recharge" />

                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/qrb_recharge"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y30"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y14"
                    android:text="充值"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/tv_coin_balance"
                    app:layout_constraintTop_toBottomOf="@+id/llyt_point"
                    app:qmui_backgroundColor="@color/color_FF5252"
                    app:qmui_borderWidth="0dp" />
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</layout>