<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x11">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/x104"
            android:layout_height="@dimen/y104"
            android:layout_marginTop="@dimen/y6"
            android:background="@drawable/icon_add_rect"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_close" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/y24"
            android:layout_marginBottom="@dimen/y86"
            android:layout_marginLeft="@dimen/x86"
            android:background="@drawable/icon_close"
            app:layout_constraintLeft_toLeftOf="@+id/iv_pic"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>