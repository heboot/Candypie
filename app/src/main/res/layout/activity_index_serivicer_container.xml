<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dlyt_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y26"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginTop="@dimen/y33"
                android:gravity="center"
                android:text="@string/page_title_rob"
                android:textColor="@color/color_343445"
                android:textSize="@dimen/x18"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/v_center"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_active"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y26"
                android:layout_marginRight="@dimen/x12"
                android:layout_marginTop="@dimen/y33"
                android:gravity="center"
                android:text="活跃"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/x18"
                android:textStyle="bold"
                app:layout_constraintRight_toLeftOf="@+id/v_center"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_center"
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y5"
                android:background="#807136FB"
                app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_logo"></View>

            <View
                android:id="@+id/v_bottom"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y3"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/bg_index_server_toolbar_bottom_line"
                app:layout_constraintRight_toLeftOf="@+id/v_center"
                app:layout_constraintTop_toBottomOf="@+id/tv_active"></View>

            <ImageView

                android:id="@+id/iv_to_normal_index"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y17"
                android:layout_marginRight="@dimen/x16"
                android:background="@drawable/icon_switch_role"
                app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_logo" />

            <ImageView
                android:id="@+id/v_to_normal_index"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/y87"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_my"
                android:layout_width="@dimen/x17"
                android:layout_height="@dimen/y17"
                android:layout_marginLeft="@dimen/x15"
                android:background="@drawable/icon_my_black"
                app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_logo" />


            <ImageView
                android:id="@+id/v_my"
                android:layout_width="@dimen/x47"
                android:layout_height="@dimen/y37"
                app:layout_constraintBottom_toBottomOf="@+id/iv_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_logo" />

            <ImageView
                android:id="@+id/iv_unread"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/y15"
                android:layout_marginLeft="@dimen/x29"
                android:layout_marginTop="@dimen/y33"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_unread"
                android:layout_width="0dp"
                android:layout_height="@dimen/y15"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/oval_red"
                android:gravity="center"
                android:text="11"
                android:textColor="@color/white"
                android:textSize="@dimen/x9"
                app:layout_constraintBottom_toBottomOf="@+id/iv_unread"
                app:layout_constraintLeft_toLeftOf="@+id/iv_unread"
                app:layout_constraintRight_toRightOf="@+id/iv_unread"
                app:layout_constraintTop_toTopOf="parent" />


            <android.support.v4.view.ViewPager
                android:id="@+id/rv_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/y10"
                android:background="@color/color_EDEDF3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo"></android.support.v4.view.ViewPager>


            <ImageView
                android:id="@+id/iv_ad"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/y95"
                android:layout_marginBottom="@dimen/y16"
                android:layout_marginRight="@dimen/x16"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <include
            android:id="@+id/include_left"
            layout="@layout/layout_leftmenu_head"></include>
    </android.support.v4.widget.DrawerLayout>
</layout>