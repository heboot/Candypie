<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/clyt_child_container"
            android:layout_width="@dimen/x375"
            android:layout_height="@dimen/y667"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></FrameLayout>

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y70"
            android:background="@drawable/icon_play_homepage"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="@dimen/x39"
            android:layout_height="@dimen/y39"
            android:layout_marginRight="@dimen/x18"
            android:background="@drawable/icon_discover_fav"
            app:layout_constraintBottom_toTopOf="@+id/tv_fav"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y18"
            android:text="@string/fav_status_un"
            android:textColor="@color/white"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toTopOf="@+id/iv_msg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_msg"
            app:layout_constraintRight_toRightOf="@+id/iv_msg" />


        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="@dimen/x39"
            android:layout_height="@dimen/y39"
            android:layout_marginRight="@dimen/x18"
            android:background="@drawable/icon_discover_msg"
            app:layout_constraintBottom_toTopOf="@+id/tv_msg"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y18"
            android:text="@string/page_title_msg"
            android:textColor="@color/white"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toTopOf="@+id/iv_videos"
            app:layout_constraintLeft_toLeftOf="@+id/iv_videos"
            app:layout_constraintRight_toRightOf="@+id/iv_videos" />


        <ImageView
            android:id="@+id/iv_videos"
            android:layout_width="@dimen/x39"
            android:layout_height="@dimen/y39"
            android:layout_marginRight="@dimen/x18"
            android:background="@drawable/icon_discover_videos"
            app:layout_constraintBottom_toTopOf="@+id/tv_videos"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_videos_num"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y15"
            android:layout_marginLeft="@dimen/x25"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/oval_red"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/x10"
            app:layout_constraintLeft_toLeftOf="@+id/iv_videos"
            app:layout_constraintTop_toTopOf="@+id/iv_videos" />

        <TextView
            android:id="@+id/tv_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y18"
            android:text="视频集"
            android:textColor="@color/white"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toTopOf="@+id/pb"
            app:layout_constraintLeft_toLeftOf="@+id/iv_videos"
            app:layout_constraintRight_toRightOf="@+id/iv_videos" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/y180"
            android:background="@drawable/bg_homepage_black_gradient_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y24"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/x11"
            android:background="@drawable/bg_rect_online_bg"
            android:gravity="center"
            android:text="online"
            android:textColor="#FFDE3F"
            android:textSize="@dimen/x16"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/tv_name"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y2"
            android:layout_marginLeft="@dimen/x11"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_city"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/iv_sex_bg"
            android:layout_width="@dimen/x38"
            android:layout_height="@dimen/y17"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/y3"
            android:background="@drawable/bg_rect_sex"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="♀25"
            android:textColor="@color/white"
            android:textSize="@dimen/x12"
            app:layout_constraintBottom_toBottomOf="@+id/iv_sex_bg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_sex_bg"
            app:layout_constraintRight_toRightOf="@+id/iv_sex_bg"
            app:layout_constraintTop_toTopOf="@+id/iv_sex_bg" />


        <ImageView
            android:id="@+id/iv_loc"
            android:layout_width="@dimen/x11"
            android:layout_height="@dimen/y12"
            android:layout_marginLeft="@dimen/x11"
            android:background="@drawable/icon_order_address"
            app:layout_constraintBottom_toBottomOf="@+id/tv_city"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_city" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y17"
            android:layout_marginLeft="@dimen/x5"
            android:text="北京"
            android:textColor="@color/white"
            android:textSize="@dimen/x15"
            app:layout_constraintBottom_toTopOf="@+id/pb"
            app:layout_constraintLeft_toRightOf="@+id/iv_loc" />




        <ProgressBar
            android:id="@+id/pb"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/y3"
            android:layout_marginBottom="@dimen/y84"
            android:layout_marginLeft="@dimen/x11"
            android:layout_marginRight="@dimen/x11"
            android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/bg_discover_progress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/y180"
            android:background="@drawable/bg_homepage_black_gradient"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/y60"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/icon_share_white"
            app:layout_constraintBottom_toBottomOf="@+id/include_toolbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/include_toolbar" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginTop="@dimen/y25"
            android:background="@drawable/icon_homepage_more_white"
            app:layout_constraintBottom_toBottomOf="@+id/include_toolbar"
            app:layout_constraintRight_toLeftOf="@+id/iv_share"
            app:layout_constraintTop_toTopOf="@+id/include_toolbar" />

        <View
            android:id="@+id/v_more"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"
            app:layout_constraintBottom_toBottomOf="@+id/v_top"
            app:layout_constraintRight_toLeftOf="@+id/iv_share"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_top" />

        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/x15"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></View>


        <ImageView
            android:id="@+id/iv_yue"
            android:layout_width="@dimen/x91"
            android:layout_height="@dimen/y40"
            android:layout_marginBottom="@dimen/y18"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/bg_themecolor_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="上滑查看详情"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_yue"
            app:layout_constraintTop_toTopOf="@+id/iv_yue" />

        <ImageView
            android:layout_marginLeft="@dimen/x10"
            app:layout_constraintTop_toTopOf="@+id/tv_up"
            app:layout_constraintBottom_toBottomOf="@+id/tv_up"
            app:layout_constraintLeft_toRightOf="@+id/tv_up"
            android:background="@drawable/icon_hoempage_arrow_up"
            android:layout_width="@dimen/x16"
            android:layout_height="@dimen/y9" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yue_ta"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            app:layout_constraintBottom_toBottomOf="@+id/iv_yue"
            app:layout_constraintLeft_toLeftOf="@+id/iv_yue"
            app:layout_constraintRight_toRightOf="@+id/iv_yue"
            app:layout_constraintTop_toTopOf="@+id/iv_yue" />
    </android.support.constraint.ConstraintLayout>
</layout>