<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_EDEDF3">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/y60"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>

        <TextView
            android:id="@+id/tv_auth_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/auth_index_tip"
            android:textColor="@color/color_343445"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/x255"
            android:layout_height="@dimen/y380"
            android:layout_marginTop="@dimen/y14"
            android:src="@drawable/auth_index_bg_delete"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_auth_status"
            app:qmui_border_width="0dp"
            app:qmui_corner_radius="@dimen/x12"
            app:qmui_is_circle="false" />

        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"
            android:background="@drawable/icon_play_homepage"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            app:layout_constraintLeft_toLeftOf="@+id/iv_cover"
            app:layout_constraintRight_toRightOf="@+id/iv_cover"
            app:layout_constraintTop_toTopOf="@+id/iv_cover" />

        <TextView
            android:id="@+id/btn_bottom"
            android:layout_width="@dimen/x314"
            android:layout_height="@dimen/y48"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/selector_bottom_button"
            android:checked="false"
            android:elevation="@dimen/x4"
            android:enabled="false"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover" />

        <ImageView
            android:id="@+id/iv_p1"
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/y5"
            android:layout_marginLeft="@dimen/x53"
            android:background="@drawable/bg_oval_343445"
            app:layout_constraintBottom_toBottomOf="@+id/tv_auth_tip1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_auth_tip1" />

        <TextView
            android:id="@+id/tv_auth_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y30"
            android:text="@string/auth_index_tip1"
            android:textColor="@color/color_343445"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_p1"
            app:layout_constraintTop_toBottomOf="@+id/btn_bottom" />

        <ImageView
            android:id="@+id/iv_p2"
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/y5"
            android:layout_marginLeft="@dimen/x53"
            android:background="@drawable/bg_oval_343445"
            app:layout_constraintBottom_toBottomOf="@+id/tv_auth_tip2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_auth_tip2" />

        <TextView
            android:id="@+id/tv_auth_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y5"
            android:text="@string/auth_index_tip2"
            android:textColor="@color/color_343445"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_p2"
            app:layout_constraintTop_toBottomOf="@+id/tv_auth_tip1" />

    </android.support.constraint.ConstraintLayout>
</layout>