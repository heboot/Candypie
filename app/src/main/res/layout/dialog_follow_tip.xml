<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/x270"
            android:layout_height="@dimen/y165">


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/y25"
                android:background="@drawable/bg_rect_white_6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <View
                android:layout_width="@dimen/x129"
                android:layout_height="@dimen/y56"
                android:background="@drawable/icon_follow_tip"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginTop="@dimen/y67"
                android:layout_marginRight="@dimen/x16"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_58586C"
                android:textSize="@dimen/x13"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_marginTop="@dimen/y120"
                android:background="@color/line_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>


            <View
                android:id="@+id/v_center"
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/y44"
                android:layout_marginTop="@dimen/y120"
                android:background="@color/line_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_007AFF"
                android:textSize="@dimen/x17"
                app:layout_constraintBottom_toBottomOf="@+id/v_center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/v_center"
                app:layout_constraintTop_toTopOf="@+id/v_center" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/color_343445"
                android:textSize="@dimen/x17"
                app:layout_constraintBottom_toBottomOf="@+id/v_center"
                app:layout_constraintLeft_toRightOf="@+id/v_center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/v_center" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>