<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/y25">

        <ImageView
            android:id="@+id/iv_point1"
            android:layout_width="@dimen/x6"
            android:layout_height="@dimen/y6"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/selector_homepage_point"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_point2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_point2"
            android:layout_width="@dimen/x6"
            android:layout_height="@dimen/y6"
            android:background="@drawable/selector_homepage_point"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_point3"
            android:layout_width="@dimen/x6"
            android:layout_height="@dimen/y6"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/selector_homepage_point"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_point2"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</layout>