        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_up_vip"
            android:layout_width="@dimen/x314"
            android:layout_height="@dimen/y70"
            android:layout_marginBottom="@dimen/y37"
            android:elevation="@dimen/x4"
            android:src="@drawable/icon_pay_gold_card_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:qmui_border_width="0dp"
            app:qmui_corner_radius="@dimen/x35"
            app:qmui_is_circle="false" />

    </android.support.constraint.ConstraintLayout>
</layout>