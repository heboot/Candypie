<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y69">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:text="¥"
            android:textColor="@color/color_343445"
            android:textSize="@dimen/x14"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_money"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x26"
            android:text="10 元"
            android:textColor="@color/color_343445"
            android:textSize="@dimen/x20"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_recharge"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_recharge" />

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y40"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/bg_rect_ff6363"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x16"
            android:background="@color/line_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></View>
    </android.support.constraint.ConstraintLayout>
</layout>