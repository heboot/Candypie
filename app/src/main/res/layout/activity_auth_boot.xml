<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></android.support.v4.view.ViewPager>

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/y70"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>


        <TextView
            android:id="@+id/btn_bottom"
            android:layout_width="@dimen/x314"
            android:layout_height="@dimen/y48"
            android:layout_marginBottom="@dimen/y27"
            android:background="@drawable/bg_rect_bottom_button"
            android:elevation="@dimen/x4"
            android:gravity="center"
            android:text="@string/do_auth"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y95"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="@dimen/x7"
                android:layout_height="@dimen/y7"
                android:background="@drawable/selector_boot_point"
                android:button="@null" />

            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="@dimen/x7"
                android:layout_height="@dimen/x7"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/selector_boot_point"
                android:button="@null" />

            <!--<CheckBox-->
            <!--android:id="@+id/cb3"-->
            <!--android:layout_width="@dimen/x7"-->
            <!--android:layout_height="@dimen/x7"-->
            <!--android:layout_marginLeft="@dimen/x10"-->
            <!--android:background="@drawable/selector_boot_point"-->
            <!--android:button="@null" />-->

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</layout>