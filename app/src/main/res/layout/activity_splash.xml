<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/sv_splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/baseline"
            android:layout_width="15dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></View>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="@dimen/y48"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginLeft="@dimen/x15"
            android:background="@drawable/bg_rect_bottom_button"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/llyt_tourist"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/baseline" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="@dimen/y48"
            android:layout_marginBottom="@dimen/y15"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/bg_rect_border_themecolor_"
            android:text="@string/register"
            android:textColor="@color/theme_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/llyt_tourist"
            app:layout_constraintLeft_toRightOf="@+id/baseline"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y113"
            android:background="@drawable/bg_login_black_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"></View>

        <LinearLayout
            android:id="@+id/llyt_tourist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y16"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_tourist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游客身份登录"
                android:textColor="@color/white"
                android:textSize="@dimen/x15" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/y15"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/icon_tourist" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</layout>
