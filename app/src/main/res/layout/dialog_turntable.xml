<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x42"
            android:layout_marginRight="@dimen/x42"
            android:background="@drawable/bg_rect_white_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y160"
                android:layout_marginTop="@dimen/y22"
                android:background="@drawable/icon_turntable_dialog_tip"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y22"
                android:text="@string/turntable_invite_tip"
                android:textSize="@dimen/x20"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_bg" />

            <LinearLayout
                android:id="@+id/llyt_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF5252"
                    android:textSize="@dimen/x16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x2"
                    android:text="@string/turntable_invite_tip2"
                    android:textColor="@color/color_58586C"
                    android:textSize="@dimen/x16" />

            </LinearLayout>

            <TextView
                android:id="@+id/tip_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:textColor="@color/color_898A9E"
                android:textSize="@dimen/x15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llyt_tip" />

            <View
                android:id="@+id/v1"
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_marginTop="@dimen/y15"
                android:background="@color/line_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tip_balance"></View>

            <View
                android:id="@+id/v2"
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/y44"
                android:background="@color/line_color"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v1"></View>

            <TextView
                android:id="@+id/tv_refuse"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/next_time"
                android:textColor="@color/color_343445"
                android:textSize="@dimen/x17"
                app:layout_constraintBottom_toBottomOf="@+id/v2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/v2"
                app:layout_constraintTop_toTopOf="@+id/v2" />

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/tongyi"
                android:textColor="@color/color_007AFF"
                android:textSize="@dimen/x17"
                app:layout_constraintBottom_toBottomOf="@+id/v2"
                app:layout_constraintLeft_toRightOf="@+id/v2"
                app:layout_constraintRight_toRightOf="parent"

                app:layout_constraintTop_toTopOf="@+id/v2" />


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>