<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/y12"
        android:paddingLeft="@dimen/x16"
        android:paddingTop="@dimen/y12">


        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/y45"
            android:layout_marginLeft="@dimen/x16"
            android:background="@drawable/icon_pay_coupons"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:text="优惠券"
            android:textColor="@color/color_343445"
            android:textSize="@dimen/x16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_img"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/y9"
            android:layout_marginRight="@dimen/x16"
            android:background="@drawable/icon_arrow_right_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</layout>